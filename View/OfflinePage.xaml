        VerticalOptions="Center" />

    <Button 
        Text="Exit"
        FontSize="20"
        TextColor="White" 
        BackgroundColor="#388E3C"
        FontFamily="{DynamicResource PrimaryFontFamily}"
        HeightRequest="50"
        WidthRequest="150"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="OnExitButtonClicked" />
    </VerticalStackLayout>
    
</ContentPage>